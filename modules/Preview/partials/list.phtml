<?php
namespace Redaxscript;

$titlePartialElement = new Html\Element('h3', array(
	'class' => 'title_content_sub'
));
$listOrderedElement = new Html\Element('ol', array(
	'class' => 'list_default'
));
$listUnorderedElement = new Html\Element('ul', array(
	'class' => 'list_default'
));
$itemElement = new Html\Element('li');
$listContent = '';
?>

<!-- list content -->

<?php for ($i = 0; $i < 5; $i++): ?>

	<?php $listContent .= $itemElement
		->copy()
		->text(Language::get($i + 1, '_number')); ?>

<?php endfor; ?>

<!-- list ordered -->

<?php echo $titlePartialElement->text('ol.list_default'); ?>

<?php echo $listOrderedElement->html($listContent); ?>

<!-- list unordered -->

<?php echo $titlePartialElement->text('ul.list_default'); ?>

<?php echo $listUnorderedElement->html($listContent); ?>
